<controls:ActionUserControl x:Class="Sitter.ToolBox.Controls.Deploy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Sitter.ToolBox.Controls"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <RadioButton Name="rbLocalTemp" VerticalAlignment="Center" Margin="5"  >Local Temp Folder</RadioButton>
            <RadioButton Name="rbLocalBuild" VerticalAlignment="Center" Margin="5" >Local Build Server</RadioButton>
            <RadioButton Name="rbAmazonQA" VerticalAlignment="Center" Margin="5" >AWS QA Server</RadioButton>
        </StackPanel>
        
    </Grid>
</controls:ActionUserControl>